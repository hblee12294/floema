extends ../base.pug

block variables
  - var template = 'about'

block content
  .about 
    .about__wrapper
      section.about__gallery
        .about__gallery_wrapper 
          each media in about.data.gallery
            figure.about__gallery_media
              img.about__gallery_media_image(src=media.image.url alt=media.image.alt)

      each section in about.data.body 
        if section.slice_type === 'title'
          h2.about__title=section.primary.text

        if section.slice_type === 'content'
          section.about__content
            .about__content_wrapper
              p.about__content_label=section.primary.label

              .about__content_description!=ctx.prismicH.asHTML(section.primary.description)

              figure.about__content_media
                img.about__content_media_image(src=section.primary.image.url alt=section.primary.image.alt)

